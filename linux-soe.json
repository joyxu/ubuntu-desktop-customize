{
  "variables": {
    "ssh_name" : "ubuntu",
    "ssh_pass" : "ubuntu",
    "hostname" : "packer-ubuntu-15.04-amd64"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "Ubuntu_64",
      "iso_url": "http://releases.ubuntu.com/15.04/ubuntu-15.04-desktop-amd64.iso",
      "iso_checksum_type": "sha256",
      "iso_checksum": "a3cfac5c32b217db2cab43f261dcbe2cc546d99ca23e113312fedb78733aef6b",
      "ssh_username": "{{user `ssh_name`}}",
      "ssh_password": "{{user `ssh_pass`}}",
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'packer' | sudo -S shutdown -P now",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{user `hostname`}}",
      "disk_size" : 81920,
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "4096"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ]
      ],
      "boot_wait" : "5s",
      "http_directory" : "http",
      "http_port_min" : 9000,
      "http_port_max" : 9000,
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz",
        " auto=true",
        " priority=critical",
        " initrd=/install/initrd.gz",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
        " hostname={{user `hostname`}}",
        " -- ",
        "<enter>"
      ]
    }
  ],
  "provisioners": []
}
